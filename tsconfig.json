{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@common/*": ["src/common/*"],
      "@commonconstants": ["src/common/constants/index"],
      "@commontypes": ["src/common/types/index"],
      "@commonutils/*": ["src/common/utils/*"],
      "@configurationservice": [
        "src/modules/shared/configuration/configuration.service"
      ],
      "@cache": ["src/modules/shared/cache/cache.decorator"],
      "@modules/*": ["src/modules/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "files": ["src/main.ts"]
}
